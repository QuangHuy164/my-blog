<div class="mt-4">
  <h3>Upload</h3>
  <form method="POST" action="/blogs/store">
    <div class="form-group">
      <label for="name">Name</label>
      <input type="name" class="form-control" id="name" name="name" />
    </div>

    <div class="form-group">
      <label for="description">Description</label>
      <input
        type="description"
        class="form-control"
        id="description"
        name="description"
      />
    </div>

    <div class="form-group">
      <label for="videoId">Video ID</label>
      <input type="videoId" class="form-control" id="videoId" name="videoId" />
    </div>

    <div class="form-group">
      <label for="level">Level</label>
      <input type="level" class="form-control" id="level" name="level" />
    </div>
    <button "submit" class="btn btn-primary">Add course</button>
  </form>
</div>